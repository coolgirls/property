/* pages/person/person.wxss */
page{
  background: #f7f8fa;
}

.person-top{
   position: relative;
}

.person-bg{
  width: 750rpx;
  height: 282rpx;
  
}

.person-bg image{
  width: 100%;
  height: 100%;
}

.person-info{
  display:flex;
  align-items:center;
  flex-direction:column;
  position:absolute;
  z-index:10;
  left:50%;
  top:15%;
  margin-left:-60rpx;
  color: #fff;
  font-size: 14px;
}

.default-avator{
  width: 120rpx;
  height: 120rpx;
  margin-bottom:8px;
}
.person-item{
  background: #fff;
  display: flex;
  position: absolute;
  z-index: 11;
  top:125px;
  left: 0;
  right: 0;
  width: 94%;
  border-radius: 10px;
  margin: 0 3%;
}

.item-list{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.333%;
  border-right: 1px solid #e8e8e8;
  text-align: center;
  font-size: 14px;
  padding:4% 0;
}

.item-list:last-child{
  border-right:0px;
}

.item-list image{
  width: 42rpx;
  height: 42rpx;
  margin-bottom: 6px;
}

.person-list{
  background: #fff;
  margin-top: 75px;
}

.history-list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height:48px;
  line-height: 48px;
  border-bottom: 1px solid #e8e8e8;
  margin: 0 10px;
  padding-left:15px;
  font-size: 14px;
}

.history-list:last-child{
   border-bottom: 0px;   
}

.history-list image{
  width: 18rpx;
  height: 31rpx;
}