/* pages/estate/estate.wxss */
page{
  font-size: 14px;
}
.estate-info{
  margin: 10px;
}

.info-list{
  border: 1px solid #cfedff;
  background: #f6fcff;
  padding:12px 15px;
  margin-bottom: 8px;
  border-radius: 10px;
}

.estate-pay{
  background: #eff9ff;
  border: 1px solid #c8e8fd;
  margin: 10px;
  border-radius: 10px;
  padding:0 10px;
}

.pay-title{
  height: 50px;
  line-height:50px;
  color: #0051a4;
  padding-left: 10px;
}

.pay-list{
  height: 45px;
  line-height: 45px;
  border-top: 1px dashed #a8deff;
  padding: 0 10px;
  display: flex;
  justify-content: space-between;
}

.active{
  color: #0051a4;
}

.noactive{
  color: #c80000;
}