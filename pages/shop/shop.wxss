/* pages/shop/shop.wxss */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.left-navbar{
  position:absolute;
  left:0;
  width:180rpx;
  height:92%;
  background-color:#eee;
  font-size:15px;
}
.left-navbar view{
  height:80rpx;
  line-height: 80rpx;
  text-align:center;
}
.active{
  background-color:#FFF;
  color:#0051a4;
}
#right{
  position:absolute;
  right:0;
  width:570rpx;
  height:92%;
}
.goods-banner{
  width: 100%;
  height: 200rpx;
}

.img-banner{
  height:200rpx;
  width:100%;
}
.goods-list{
  display:flex;
  flex-wrap:wrap;
  margin: 16rpx;
}
.goods-title{
  width:100%;
  font-size:15px;
  font-weight:bold;
  padding-left:10rpx;
}
.goods{
  width:100%;
  font-size:14px;
  border-bottom: 1px solid #e8e8e8;
  display: flex;
  padding: 20rpx 0;
}
.goods .left-pic{
  width:140rpx;
  height:140rpx;
  margin-right: 8px;
}
.goods .left-pic .img{
  width:140rpx;
  height:140rpx;
}

.goods .right-txt{
  display: flex;
  flex-direction: column;
  height:140rpx;
  width: 382rpx;
}

.goods .right-bot{
  display: flex;
  justify-content: space-between;
  margin-top:54rpx;
}

.right-price{
  color: #c80000
}

.right-cart{
  display: flex;
}

.reduce,.add{
  width: 42rpx;
  height: 42rpx;
  border: 1px solid #999;
  border-radius: 4px;
  text-align: center;
  color: #0051a4;
}

.nums{
  width: 56rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
}

.shop-bot{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  background: #fff;
  height:8%;
  align-items: center;
  box-shadow:0 -3px 3px #eee;
  z-index: 11;
}

.bot-total{
  display:flex;
  margin-left:60rpx;
  width:60%;
  height:100%;
  align-items:center;
}

.total-price{
  color: #c80000
}

.bot-goPay{
  width: 200rpx;
  height: 84rpx;
  line-height: 84rpx;
  color: #fff;
  border-radius: 20rpx;
  background:#079cfb;
  text-align: center;
  margin-right: 14rpx;
}

.mask{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.7);
  width: 100%;
  height: 100%;
  z-index: 10;
}

.cart-list{
  position: fixed;
  left: 0;
  right: 0;
  bottom:8%;
  background: #fff;
  z-index: 11;
  padding:0 16rpx;
}
.del-item{
  height: 70rpx;
  line-height: 70rpx;
  text-align: right;
  padding-right: 30rpx;
  border-bottom: 1px solid #e8e8e8;
  color: #999;
  font-size: 13px;
}
.list-item{
  display: flex;
  width: 100%;
  border-bottom: 1px solid #e8e8e8;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.list-item .left-pic{
  width:140rpx;
  height:140rpx;
  margin-right: 8px;
}
.list-item .left-pic .img{
  width:140rpx;
  height:140rpx;
}

.list-item .right-txt{
  display: flex;
  flex-direction: column;
  height:140rpx;
  width: 578rpx;
}

.list-item .right-bot{
  display: flex;
  justify-content: space-between;
  margin-top:54rpx;
}