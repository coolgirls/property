/* pages/login/login.wxss */
page{
  font-size: 14px;
}
.login-bg{
  margin-bottom: 30px;
}

.login-bg image{
  width: 750rpx;
  height: 399rpx;
}

.login-item{
  width: 630rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}

.list-item{
  display: flex;
  border-bottom:1px solid #dfe7ed;
  padding-bottom: 15px;
}

.list-item label{
  width:40px;
  text-align: center;
  margin-right: 20px;
}

.list-item:first-child{
  margin-bottom:20px;
}

.register-btn{
  text-align: right;
  color: #0051a4;
  margin-right:60rpx;
  margin-top: 15px;
}

.login-btn{
  background: #079cfb;
  color: #fff;
  width: 630rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 16px;
  margin:20px auto 40px;
  text-align: center;
  border-radius: 10px;
}